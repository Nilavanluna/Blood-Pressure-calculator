@page
@model BPCalculator.Pages.BloodPressureModel

@{
    ViewData["Title"] = "BP Category Calculator";
}

<h4>BP Category Calculator</h4>
<hr />

<div class="row">
    <!-- Left Column: Input Form -->
    <div class="col-md-6">
        <h5>Enter Reading</h5>
        <form method="post" id="form1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="BP.Systolic" class="control-label"></label>
                <input asp-for="BP.Systolic" class="form-control" />
                <span asp-validation-for="BP.Systolic" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="BP.Diastolic" class="control-label"></label>
                <input asp-for="BP.Diastolic" class="form-control" />
                <span asp-validation-for="BP.Diastolic" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Calculate & Save" class="btn btn-primary" />
            </div>

            @if (ViewData.ModelState.IsValid && Model.Readings.Count > 0)
            {
                <div class="alert alert-info mt-3">
                    <strong>Category:</strong> @Model.Readings.Last().Category
                </div>
            }
        </form>
    </div>

    <!-- Right Column: Statistics -->
    <div class="col-md-6">
        <h5>📊 Statistics & History</h5>

        @if (Model.Readings.Count > 0)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <h6>Overview</h6>
                    <p><strong>Readings Recorded:</strong> @Model.Readings.Count/10</p>
                    <p><strong>Average:</strong> @Model.AverageSystolic/@Model.AverageDiastolic mmHg</p>
                    <p><strong>Median:</strong> @Model.MedianSystolic/@Model.MedianDiastolic mmHg</p>
                    <p><strong>Range:</strong> @Model.LowestSystolic-@Model.HighestSystolic mmHg (Systolic)</p>

                    @if (Model.ConsistencyScore.HasValue)
                    {
                        <div class="mt-2">
                            <strong>Consistency Score:</strong>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar"
                                     style="width: @(Model.ConsistencyScore)%;"
                                     aria-valuenow="@Model.ConsistencyScore"
                                     aria-valuemin="0" aria-valuemax="100">
                                    @Model.ConsistencyScore%
                                </div>
                            </div>
                            <small class="text-muted">
                                @if (Model.ConsistencyScore > 80)
                                {
                                    <span>Excellent - Very stable readings</span>
                                }
                                else if (Model.ConsistencyScore > 60)
                                {
                                    <span>Good - Fairly stable</span>
                                }
                                else
                                {
                                    <span>Varying - Readings are inconsistent</span>
                                }
                            </small>
                        </div>
                    }
                </div>
            </div>

            <h6>📝 Recent Readings</h6>
            <div style="max-height: 300px; overflow-y: auto;">
                <table class="table table-sm table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Time</th>
                            <th>Systolic/Diastolic</th>
                            <th>Category</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reading in Model.Readings.OrderByDescending(r => r.Timestamp))
                        {
                            <tr>
                                <td>@reading.Timestamp.ToString("HH:mm")</td>
                                <td><strong>@reading.Systolic/@reading.Diastolic</strong></td>
                                <td>@reading.Category</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">No readings yet. Submit your first reading!</div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}